<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- Tier 1 -->
  <ResearchProjectDef>
    <defName>AutomationBasics</defName>
    <label>Automation basics</label>
    <techLevel>Industrial</techLevel>
    <baseCost>1000</baseCost>
    <description>Learn the very basics of automation and mechanisms, the gateway to an industrial colony.</description>
    <prerequisites>
      <li>Machining</li>
      <li>MicroelectronicsBasics</li>
    </prerequisites>
    <requiredResearchBuilding>HiTechResearchBench</requiredResearchBuilding>
    <tab>Automation</tab>
    <researchViewX>0</researchViewX>
    <researchViewY>3</researchViewY>
  </ResearchProjectDef>
  <ResearchProjectDef>
    <defName>PRFMachineLearning</defName>
    <label>Machine learning</label>
    <techLevel>Industrial</techLevel>
    <baseCost>2000</baseCost>
    <description>Teach machines how to improve their abilities by themselves. Unlocks the AI research bench. Also lets you craft drone modules at the robotic machining table.</description>
    <prerequisites>
      <li>AutomationBasics</li>
	  <li>AutomaticFarming</li>
	  <li>MagneticTape</li>
    </prerequisites>
    <requiredResearchBuilding>HiTechResearchBench</requiredResearchBuilding>
	<requiredResearchFacilities><li>MultiAnalyzer</li></requiredResearchFacilities>
    <tab>Automation</tab>
    <researchViewX>3</researchViewX>
    <researchViewY>3</researchViewY>
  </ResearchProjectDef>

  <!-- Tier 2 -->
  <ResearchProjectDef>
    <defName>PRFGoldbachConjecture</defName>
    <label>Goldbach's conjecture</label>
    <techLevel>Spacer</techLevel>
    <baseCost>1500</baseCost>
    <description>"Any even integer greater than or equal to 4 can be formed from the sum of 2 prime numbers."\nUnlocks a new array of research projects.</description>
    <prerequisites>
      <li>PRFMachineLearning</li>
    </prerequisites>
    <requiredResearchBuilding>AIResearchBench</requiredResearchBuilding>
    <tab>Automation</tab>
    <researchViewX>4</researchViewX>
    <researchViewY>3</researchViewY>
  </ResearchProjectDef>

</Defs>
